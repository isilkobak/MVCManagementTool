@model AdminUI.Models.EntityFramework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="row">
            <h3>Lütfen giriş yapınız...</h3>
            @ViewBag.Mesaj
            <div class="container">
                @using (Html.BeginForm("Login", "Security", FormMethod.Post))
                {
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Ad)
                        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanici Adi" })
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => m.Sifre)
                        @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", placeholder = "Sifre" })
                    </div>

                    <div class="form-group row">                       
                         <button type="submit" class="btn-success">Giriş Yap</button>
                    </div>
                }

            </div>
        </div>
    </div>

</body>
</html>
