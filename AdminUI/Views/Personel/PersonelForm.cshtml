@model AdminUI.ViewModels.PersonelFormViewModel
@{
    ViewBag.Title = "PersonelForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personel Formu</h2>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
@using (Html.BeginForm("Kaydet", "Personel", FormMethod.Post, new {enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.Ad)
        @Html.TextBoxFor(m => m.Personel.Ad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personel.Ad)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.Soyad)
        @Html.TextBoxFor(m => m.Personel.Soyad, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personel.Soyad)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.DepartmanId)
        @Html.DropDownListFor(m => m.Personel.DepartmanId, new SelectList(Model.Departmanlar, "Id", "Ad"), "Departman Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.YoneticiId)
        @Html.DropDownListFor(m => m.Personel.YoneticiId, new SelectList(Model.Personeller, "Id", "Ad"), "Yönetici Seçiniz", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.Telefon)
        @Html.TextBoxFor(m => m.Personel.Telefon, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Personel.Telefon)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Personel.ResimYolu)
        <label for="file">Filename:</label>
        <input type="file" name="file" id="file" />

        <input type="submit" />
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Personel.YoneticiMi) Personel bir Yonetici ise İşaretleyiniz
        </label>
    </div>
    @Html.HiddenFor(m => m.Personel.Id)
    <button type="submit" class="btn btn-default">Kaydet</button>
}
